<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SkripsiMuhammadIqbal" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor">@color/white</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SkripsiMuhammadIqbal" parent="Base.Theme.SkripsiMuhammadIqbal" />


    <style name="CustomButtonPrimaryOutlined" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#fff</item>
        <item name="android:textColor">#0B1F8F</item>
        <item name="android:enabled">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#0B1F8F</item>
    </style>


    <style name="CustomButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/btn_primary_selector_bg</item>
        <item name="android:textColor">@color/color_text_button_filled</item>
        <item name="android:enabled">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>
    </style>




</resources>